<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Bai+Jamjuree:wght@600&display=swap" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js" defer></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" defer></script>
<script src="https://code.jquery.com/jquery-3.5.0.js"></script>
<link rel="stylesheet" href="/css/addLot.css">
<script src="/js/addLot.js" defer></script>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post" id="user_form" action="/admin/add" enctype="multipart/form-data">
                            
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">หมายเลขสลาก</label>
                            <div class="input-group col-md-6">
                                <input type="text" name="number" id="number" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">ราคา</label>
                            <div class="input-group col-md-6">
                                <input type="text" name="price" id="price" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">ส่วนลด</label>
                            <div class="input-group col-md-6">
                                <input type="text" name="discount" id="discount" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">งวดที่ออก</label>
                            <div class="input-group col-md-6">
                                <input type="text" name="date" id="date" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">จำนวนสลาก</label>
                            <div class="input-group col-md-6">
                                <input type="text" name="remain" id="remain" class="form-control" required>
                            </div>
                        </div>
            
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">แนบรูปสลาก</label>
                            <div class="input-group col-md-6">
                                <input type="file" name="lot_image" id="lot_image" required>
                            </div>
                        </div>
            
                        <div class="form-group row">
                            <span id="user_uploaded_image"></span>
                        </div>
                        <a class="btn btn-light" href="/admin/add" role="button">ย้อนกลับ</a>
                        <input type="submit" name="action" id="addLotBtn" class="btn btn-light" value="เพิ่ม">
                    </form>
			    </div>
            </div>
        </div>
    </div>
</div>