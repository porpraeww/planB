<%- include("partials/header") %>
    <link rel="stylesheet" href="/css/cash.css">

<br>
<div class="container-fluid">
    <div class="row justify-content-md-center" style="min-height: 400px"> 
        <div class="col-12 col-md-4 text-center">
            <h4>ขึ้นเงิน</h4>
            <form action="/users/editmoney" method="get">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">รางวัลที่</th>
                            <th scope="col">หมายเลขที่ถูกรางวัล</th>
                            <th scope="col">จำนวนเงินรางวัล</th>
                            <th scope="col">สถานะการโอนเงิน</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% won.forEach(function(won){ %>
                            <tr id="a<%= won.t %>" class="res">
                                <td scope="row"><%= won.rank %></td>
                                <td><%= won.number %></td>
                                <td><%= won.prize %></td>
                                <% if(won.status) { %>
                                    <td style="color: green;">ดำเนินการแล้ว</td>
                                <% } %>
                                <% if(!won.status) { %>
                                    <td style="color: crimson;">กำลังดำเนินการ</td>
                                <% } %>
                            </tr>
                        <% }); %>
                            
                        </tbody>
                    </table>
                </div>
                <div class="form-group row">
                    <div class="col-md-6 offset-md-4">
                        <h>หมายเหตุ หักภาษี ณ ที่จ่าย 2% (ยอดที่แสดงยังไม่รวมการหักภาษี)</h>
                    </div>
                </div>
                <div class="col-md-6 offset-md-4">
                    <input type="submit" name="" value="ตั้งค่าบัญชีรับเงิน" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>